    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <label for="book_title">Body</label><br>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>

  <p>
    <%= link_to 'show' , book_path(@book.id) %>
    |
    <%= link_to "Back" , "/books" %>
  </p>
<% end %>
